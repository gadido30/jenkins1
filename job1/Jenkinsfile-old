JOB (1)

pipeline {
  environment {
    registry = "gadido30/mydocker"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Pull Code from GitHub') {
      steps {
        git 'https://github.com/gadido30/jenkins1/job1'
      }
    }
    stage('Build Docker Continer') {
      steps{
        script {
		sh '''
		   myapps.py << EOF
		   from flask import Flask
           import docker

           #Connect to Docker Engine
           cli = docker.DockerClient(base_url='tcp://127.0.0.1:2375')
           containers = cli.containers.list(all=True)
           containers_name = ""
           for i in containers:
                  containers_name += i.name + ","
                  print(i.name, i)
           app = Flask(__name__)

           #Return continers list
           @app.route('/')
           def list:
               return "Continers List:" + containers_name
	   if __name == '__main__':
               app.run(debug=True, host='0.0.0.0',port=80)
           EOF
		   
		   Dockerfile << EOF
		   FROM python:3
		   WORKDIR /usr/src/app
           RUN pip install flask
		   COPY myapps.py .
		   EXPOSE 80/tcp
           CMD [ "python", "./myapps.py" ] 
		   EOF
		   
		   
		   '''
          dockerImage = docker.build(registry + ":$BUILD_NUMBER", "-f Dockerfile .") 
        }
      }
    }
    stage('Push to DockerHub') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
    stage('Remove Unused docker image') {
      steps{
        sh "docker rmi $registry:$BUILD_NUMBER"
      }
    }
  }
}
